@model IEnumerable<Bouffage.Models.VoteRecipe>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecipeGotVoted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpOrDown)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeGotVoted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recipe.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpOrDown)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VoteRecipeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VoteRecipeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VoteRecipeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
